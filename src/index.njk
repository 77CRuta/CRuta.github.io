layout: base.njk
title: Home
---

<h1>Posts</h1>

{% if collections.post.length == 0 %}
  <p>No posts yet.</p>
{% else %}
  <ul class="post-list">
    {% for post in collections.post | reverse %}
      <li>
        <time datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate }}
        </time>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </li>
    {% endfor %}
  </ul>
{% endif %}
